    <script>
        // --- HELPER FUNCTION: Label Wrapping ---
        // Splits long strings into arrays of strings max 16 chars long
        function formatLabel(str, maxLen = 16) {
            if (str.length <= maxLen) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxLen) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- GLOBAL CHART CONFIG ---
        // Common Tooltip Configuration for Multi-line Labels
        const commonTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART 1: Break Even Analysis (Line Chart) ---
        const ctxBep = document.getElementById('bepChart').getContext('2d');
        // Data simulation
        // Fixed Cost: 5000
        // Price: 20
        // Var Cost: 10
        // BEP = 5000 / (20-10) = 500 units
        const units = [0, 200, 400, 500, 600, 800, 1000];
        const fixedCosts = units.map(() => 5000);
        const totalCosts = units.map(u => 5000 + (u * 10));
        const revenue = units.map(u => u * 20);

        new Chart(ctxBep, {
            type: 'line',
            data: {
                labels: units.map(u => formatLabel(u + " Units")),
                datasets: [
                    {
                        label: '固定成本 (Fixed Costs)',
                        data: fixedCosts,
                        borderColor: '#9CA3AF', // Gray
                        borderDash: [5, 5],
                        borderWidth: 2,
                        pointRadius: 0,
                        fill: false
                    },
                    {
                        label: '总成本 (Total Costs)',
                        data: totalCosts,
                        borderColor: '#F97316', // Orange
                        backgroundColor: 'rgba(249, 115, 22, 0.1)',
                        borderWidth: 3,
                        fill: false
                    },
                    {
                        label: '销售收入 (Revenue)',
                        data: revenue,
                        borderColor: '#1E40AF', // Blue
                        backgroundColor: 'rgba(30, 64, 175, 0.1)',
                        borderWidth: 3,
                        fill: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: '盈亏平衡点分析 (BEP Analysis)'
                    },
                    tooltip: commonTooltipConfig,
                    annotation: { // Note: Annotation plugin not loaded, using tooltip logic mainly
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: '金额 (Amount)' }
                    },
                    x: {
                        title: { display: true, text: '销售数量 (Units)' }
                    }
                },
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
            }
        });

        // --- CHART 2: Cash Flow Projection (Bar Chart) ---
        const ctxCash = document.getElementById('cashFlowChart').getContext('2d');
        
        // Data: Monthly Net Cash Flow (simulated)
        const monthLabels = ["Month 1 (Launch)", "Month 2", "Month 3", "Month 4", "Month 5", "Month 6"];
        const cashBalance = [15000, 2000, -3000, 1000, 6000, 12000]; // Negative in month 3
        
        // Dynamic color for negative values
        const cashColors = cashBalance.map(val => val < 0 ? '#EF4444' : '#10B981');

        new Chart(ctxCash, {
            type: 'bar',
            data: {
                labels: monthLabels.map(l => formatLabel(l)),
                datasets: [{
                    label: '期末现金余额 (Ending Cash Balance)',
                    data: cashBalance,
                    backgroundColor: cashColors,
                    borderColor: cashColors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        ...commonTooltipConfig,
                        callbacks: {
                            ...commonTooltipConfig.callbacks,
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('zh-CN', { style: 'currency', currency: 'CNY' }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: '6个月现金流预测 (Cash Flow Projection)'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: (context) => context.tick.value === 0 ? '#000' : '#e5e7eb', // Highlight zero line
                            lineWidth: (context) => context.tick.value === 0 ? 2 : 1
                        }
                    }
                }
            }
        });

        // --- CHART 3: Readiness Radar (Radar Chart) ---
        const ctxRadar = document.getElementById('radarChart').getContext('2d');

        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: [
                    formatLabel("市场调研 (Market Research)"), 
                    formatLabel("财务资金 (Financial Capital)"), 
                    formatLabel("技术能力 (Technical Skills)"), 
                    formatLabel("法律合规 (Legal Compliance)"), 
                    formatLabel("团队组建 (Team Building)"),
                    formatLabel("供应链 (Supply Chain)")
                ],
                datasets: [{
                    label: '当前准备度 (Current Readiness)',
                    data: [85, 60, 90, 40, 70, 75], // Legal is low
                    fill: true,
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    borderColor: '#2563EB',
                    pointBackgroundColor: '#2563EB',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#2563EB'
                }, {
                    label: '理想目标 (Target)',
                    data: [100, 100, 100, 100, 100, 100],
                    fill: false,
                    borderColor: '#D1D5DB',
                    borderDash: [5, 5],
                    pointRadius: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltipConfig
                },
                scales: {
                    r: {
                        angleLines: {
                            display: true
                        },
                        suggestedMin: 0,
                        suggestedMax: 100,
                        ticks: {
                            stepSize: 20
                        }
                    }
                }
            }
        });

    </script>
</body>
